<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
     <servlet>
        <servlet-name>srvlCommande</servlet-name>
        <servlet-class>controleurs.srvlCommande</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvlCompte</servlet-name>
        <servlet-class>controleurs.srvlCompte</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvlNetArticle</servlet-name>
        <servlet-class>controleurs.srvlNetArticle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>srvlCommande</servlet-name>
        <url-pattern>*.cde</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvlCompte</servlet-name>
        <url-pattern>*.cpt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvlNetArticle</servlet-name>
        <url-pattern>*.na</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
